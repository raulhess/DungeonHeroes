<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.monsterhunt.activities.GameActivity" >

    <TextView
        android:id="@+id/cover"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="bottom"
        android:padding="5dp"
        android:textColor="#FFF"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/game_dungeon_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp" />

    <LinearLayout
        android:id="@+id/game_monster_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:background="@drawable/clickable_layout"
        android:clickable="true"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/game_monster_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:adjustViewBounds="false"
            android:background="#333"
            android:contentDescription="@string/help_monster_img"
            android:padding="2dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/monster_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="17sp" />

            <ProgressBar
                android:id="@+id/monster_health"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" />

            <TextView
                android:id="@+id/monster_health_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/log_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#333"
        android:padding="5dp" >

        <TextView
            android:id="@+id/game_log"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#FFF" />
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_weight="2" >

        <LinearLayout
            android:id="@+id/game_character_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/clickable_layout"
            android:clickable="true"
            android:orientation="vertical"
            android:layout_marginBottom="5dp" >

            <TextView
                android:id="@+id/char_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="17sp" />

            <ProgressBar
                android:id="@+id/char_health"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" />

            <TextView
                android:id="@+id/char_health_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/char_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/clickable_layout"
            android:clickable="false"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

</LinearLayout>